<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Book</title>
    <!-- local css -->
    <link rel="stylesheet" href="/styles/new.css" />
    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- font awesome -->
    <script
      src="https://kit.fontawesome.com/420f8fd081.js"
      crossorigin="anonymous"
    ></script>
    <!-- jquery -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <style>
      body {
        background-color: #f3eeea;
        padding-top: 30px;
        padding-bottom: 80px;
      }
    </style>
  </head>
  <body>
    <main class="container-md">
      <div class="center">
        <h1 class="title">Add New Book</h1>
        <div class="input-boxes">
          <form action="/add" method="post" id="add-form">
            <div id="inputTitle" class="input-items">
              <label class="subTitle" for="newTitle">Book Title</label>
              <input type="text" name="newTitle" id="newTitle" required />
            </div>
            <div id="inputOlid" class="input-items">
              <label class="subTitle" for="newOild">OLID</label>
              <input
                type="text"
                name="newOlid"
                id="newOlid"
                maxlength="11"
                required
              />
            </div>
            <div id="inputDate" class="input-items">
              <label class="subTitle" for="newDate_read">Date Read</label>
              <input
                type="date"
                name="newDate_read"
                id="newDate_read"
                required
              />
            </div>
            <div id="inputRating" class="input-items">
              <h6 class="subTitle">Rating</h6>
              <div class="stars">
                <input type="radio" id="star5" name="newRating" value="5" />
                <label for="star5" title="5"
                  ><i class="fa-solid fa-star" style="color: #ccc"></i
                ></label>
                <input type="radio" id="star4" name="newRating" value="4" />
                <label for="star4" title="4"
                  ><i class="fa-solid fa-star" style="color: #ccc"></i
                ></label>
                <input type="radio" id="star3" name="newRating" value="3" />
                <label for="star3" title="3"
                  ><i class="fa-solid fa-star" style="color: #ccc"></i
                ></label>
                <input type="radio" id="star2" name="newRating" value="2" />
                <label for="star2" title="2"
                  ><i class="fa-solid fa-star" style="color: #ccc"></i
                ></label>
                <input type="radio" id="star1" name="newRating" value="1" />
                <label for="star1" title="1"
                  ><i class="fa-solid fa-star" style="color: #ccc"></i
                ></label>
              </div>
            </div>
            <div id="inputReview" class="input-items">
              <label class="subTitle" for="newReview">Review</label>
              <textarea
                name="newReview"
                class="auto-height"
                id="newReview"
                rows="10"
                required
              ></textarea>
            </div>
            <div id="inputNotes" class="input-items">
              <h6 class="subTitle">Notes</h6>
              <br />
              <label class="subTitle" for="newNote1">1.</label><br />
              <textarea
                name="newNote"
                class="newNote auto-height"
                id="newNote1"
                rows="3"
              ></textarea>
            </div>
            <button class="addNoteBtn">more notes</button>
            <button class="submitBtn" type="submit">
              <i class="fa-solid fa-check" style="color: #ffffff"></i> Confirm
            </button>
          </form>
        </div>
      </div>
    </main>
    <script>
      let current_note = 1;
      $(".addNoteBtn").click(function () {
        current_note++;
        let note_box = `<br /><br /><label class="subTitle" for="newNote${current_note}">${current_note}. </label><br /><textarea name="newNote" class="newNote auto-height" id="newNote${current_note}" rows="3"></textarea>`;
        $("#inputNotes").append(note_box);
      });
    </script>
  </body>
</html>
